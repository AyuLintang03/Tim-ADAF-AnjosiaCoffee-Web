<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <link rel="icon" href="img/logo.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Anjosia Coffee</title>
   
</head>
<body>
    <div class="container">
        <div class="topbar">
            <div class="logo">
                <h2>Anjosia Coffee</h2>
            </div>
            <div class="search">
                <form action="/user/search" method="get">
                <input type="text" name="username"  placeholder="search Username">
                <label for="search"> <i class="fas fa-search"></i></label>
                </form>
            </div>
            <div class="user"><a href="/login">
                <img src="/img/user.png" alt=""></a>
            </div>
         </div>         
         <div class="sidebar">
            <ul>
                <li>
                    <a href="/admin">
                       <i   class="fas fa-home"></i>
                       <div>Dashboard</div>
                    </a>
                </li>
                <div class="data">Data Master</div>          
                <li>
                    <a href="/user">
                       <i   class="fas fa-users"></i>
                       <div>User</div>
                    </a>
                </li>
                <li>
                    <a href="/produk">
                       <i   class="fas fa-folder"></i>
                       <div>Barang</div>
                    </a>
                </li>
                <div class="data">Transaksi</div>          
                <li>
                    <a href="/barang_masuk">
                       <i   class="fas fa-download"></i>
                       <div>Barang Masuk</div>
                    </a>
                </li>
                <li>
                    <a href="/barang_keluar">
                       <i   class="fas fa-upload"></i>
                       <div>Barang Keluar</div>
                    </a>
                </li>
                <div class="data">Laporan</div>          
                <li>
                    <a href="/cetak">
                       <i   class="fas fa-print"></i>
                       <div>Cetak Laporan</div>
                    </a>
                </li>
            </ul>
         </div>         
         <div class="main">
            <div class="cards1">
                <div class="card-back">
                <div class="card2">
                    <h1>Data User</h1>
                </div>
                </div>
                
            </div> 
            <div class="card-body">
                <div class="table">
                      <% if (datas.length > 0) { %>
                    <div class="table-responsive">
                       
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Username</th>
                                    <th>No.Telepon</th>
                                    <th>Aksi</th>                                                
                                </tr>
                            </thead>
                            <tbody> 
                                 <% datas.forEach((data, user) => { %>
                                <tr>
                                    <td><%= data.user_id %> </td>
                                    <td><%=data.username %> </td>
                                    <td><%=data.nomer_hp%></td> 
                                     <td>
                                        <nav class="area-aksi">
                                            <button class="btn btn-edit"><a href="user/edit/<%= data.user_id %>" class="btn-edits">
                                                <i class="fa-regular fa-pen-to-square"></i></a></button>
                                            <button class="btn btn-hapus">
                                                <a href="user/delete/<%= data.user_id %>" class="btn-deletes">
                                                <i class="fa-solid fa-trash-can"></i></a></button>
                                        </nav>

                                 </td>                                               
                                </tr>
                              
                            <% }) %>
                            </tbody>
                        </table>
                         <% } else { %>
                            <p class="text-center">No players found. Go <a href="/player/add" >here</a> to add players.</p>
                        <% } %>
                   </div>                 
                </div>          
         </div>
</body>
</html>